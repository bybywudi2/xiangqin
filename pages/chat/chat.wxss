/**chat.wxss**/
@import "../../components/bubble/bubble.wxss";
page{
  height: 100%;
}
#chat-container{
height: 100%;
}
.chat-content {
  height: 80%;
  width: 100%;
  flex: 1;
  overflow: scroll;
}
.chat-input {
  height: 10%;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}
.chat-input-wrapper {
  height: 100%;
  width: 100%;
  display: flex; 
   align-items:center;
  background-color: #f4f4f6;
  border-top: 1rpx solid #d6d7d9;
}
.chat-input-record {

}
.chat-input-main {
  display: flex; 
  flex: 1;
  align-items:center;
  height: 100%;
  padding: 0 16rpx;
}
.chat-input-main > input {
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  border: 1rpx solid #d6d7d9;
  font-size: 28rpx;
}
.chat-input-other {
  display: flex; 
  justify-content: center;
  width: 140rpx;
}

#submit-button{
  width: 90%;
  height: 74rpx;
  border: 1rpx solid #d6d7d9;
  border-radius: 12rpx;
  font-size: 28rpx;
}